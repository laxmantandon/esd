{
  "name": "esd",
  "productName": "esd",
  "version": "1.0.0",
  "description": "eSign utility Application",
  "main": "src/electron.js",
  "scripts": {
    "start_process": "node src/server.js",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "setup": "electron-builder --x64 --ia32",
    "dev": "electron src/index.js",
    "build": "concurrently \"npm run start_process\" \"npm run dev\""
  },
  "setup": {
    "appId": "esd.vaptechltd.co.ke",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "OneClick": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Uninstall eSign Utility",
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "Vap Technologies Limited",
    "email": "vishal@vaptechltd.co.ke"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "esd"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.27.2",
    "concurrently": "^7.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "https": "^1.0.0",
    "jimp": "^0.16.1",
    "localStorage": "^1.0.4",
    "morgan": "^1.10.0",
    "qr-image": "^3.2.0",
    "qrcode": "^1.5.0",
    "request": "^2.81.0",
    "update-electron-app": "^2.0.1",
    "xml2js": "^0.4.23",
    "xmldom": "^0.6.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "electron": "19.0.1",
    "electron-builder": "^23.1.0",
    "electron-packager": "^15.5.1"
  }
}
